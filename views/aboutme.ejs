        .buttons .btn{
    background-color: blueviolet;
    border-radius: 3px;
            padding: 10px;
            color: white;
transition: all ease 0.8s;

        }
        .btn:hover{
            background-color: white;
            color: rgb(106, 90, 90);
        }
        .heading {
            font-size: 6vw;
            font-weight: bold;
            font-family: 'Courier Prime', monospace;
            color: rgb(57, 51, 51);
        }

        .Profession {
            font-family: 'Courier Prime', monospace;
            margin-left: 10px;

        }

        .titles {
            font-family: 'Courier Prime', monospace;

        }

        .herosection {
            height: 80vh;
            align-items: center;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .img img {
            height: 300px;
            border-radius: 50%;
            width: auto;
        }

        * {
            padding: 0%;
            box-sizing: border-box;

        }

        body {
            overflow: hidden;
            background-color: rgb(213, 218, 219);
            margin: 4% 4%;
        }

        .main {
            overflow: auto;
            height: 100vh;
            width: 100%;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: solid rgb(190, 174, 174) 2px;
            padding-bottom: 20px;
        }

        .arrow span {
            color: rgb(100, 93, 93);
        }



        /* =========responsive query ================= */

        @media screen and (max-width: 1000px) {

            /* Styles for screens up to 600px wide */
            .herosection {
                display: flex;
                flex-direction: column;
            }



            .heading {
                font-size: 40px;
            }

            .myAbout {
                margin-left: 3%;
                text-align: center;


            }
            .buttons{
                display: flex;
                justify-content: center;
                gap: 5px;
                margin-right: 20px;
            }
        }
    </style>


